<div class="span4">
  <section class="widget">
    <header>
      <legend><h4>
        Track your Activities
      </h4></legend>
    </header>

    <div class = "body">
      <% current_user.goals.each do |goal| %>
      <section class="widget">
        <div class="row-fluid">
          <div class="span4">
              <img src="img/5.jpg" alt="64x64" style="height: 100px; width:100px;" data-placement="top" id="tooltip-enabled" data-original-title="" class="img-circle">
            </div>
          <div class="span8">
            <div class="span10">
              <h4 class="no-margin"><%= goal.name_of_activity_through_goal %></h4>
            </div>
            <div class="span2">
              <%= button_to "+", new_user_goal_activity_log_path(current_user, goal), :class => "btn btn-success pull-top", :method => :get %>
            </div>
            <address>
              <br>
              Goal: <%= goal.weekly_goal %> times/week<br>
              Logged: <%= goal.count_activity_log %> times<br>
              Last Logged: <%= goal.updated_at %>
            </address>
          </div>
        </div>
      </section>
      <% end %>
        <%= button_to "Add new Goal", new_user_goal_path(current_user), :class => "btn btn-success", :method => :get %>
    </div>
  </section>
</div> 

<div class="span4">
  <section class="widget">
    <div id="comment_wall">
      <header>
        <h2>Wall:</h2>
      </header>

      <%= render "/comments/new" %>
      <%= render "/comments/each" %>
    </div>
    <%= paginate @comments %>
  </section>
</div>

<div class="span4">
  <section class="widget">
    <div class="teams">
      <header>
        <h2>Teams:</h2>
      </header>
      <p>
      I own teams:
        <ul>
          <% Team.where(owner_id: @commentable.id).each do |team| %>
            <li> <%= link_to team.name, team_path(team.id) %></li>
          <% end %>
        </ul>

      <%= link_to "Create a Team",  new_team_path(@commentable.id) %>
      </p>
      <div class="my_teams"> I'm a member of teams: 
        <ul>
          <% @commentable.teams.each do |team| %>
            <li> <%= link_to team.name, team_path(team.id) %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </section>
</div>
