<div class="single-widget-container" id="sign-up-widget">  
  <section class="widget login-widget">
    <header class="text-align-center">
    	<h1>User Information</h1>
    </header>

<%= form_for @user, :html => {:multipart => true} do |user| %>

	<div class="body">
    <fieldset>

		<div class="user-info-form">

			<% if @user.errors.any? %>
				<div class = "error_messages">
					<h2>Form is invalid</h2>
					<ul>
						<% for message in @user.errors.full_messages %>
							<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<div class="control-group no-margin">
				<div class="field">
					<%= user.label :name %>
				</div>
				<div class="control">
	        <div class="input-prepend input-padding-increased">
	          <span class="add-on">
	            <i class="eicon-user icon-large"></i>
	          </span>
					<%= user.text_field :name %>
					</div>
				</div>
			</div>

			<div class="control-group no-margin">
				<div class="field">
					<%= user.label :email %>
				</div>
				<div class="control">
	        <div class="input-prepend input-padding-increased">
	          <span class="add-on">
	            <i class="eicon-user icon-large"></i>
	          </span>
					<%= user.text_field :email %>
					</div>
				</div>
			</div>
				
			<div class="control-group no-margin">  	
				<div class="field">
					<%= user.label :password %>
				</div>
				<div class="control">
	        <div class="input-prepend input-padding-increased">
	          <span class="add-on">
	            <i class="icon-lock icon-large"></i>
	          </span>
					<%= user.password_field :password %>
					</div>
				</div>
			</div>

			<div class="control-group no-margin">
				<div class="field">
					<%= user.label :height %>
				</div>
				<div class="control">
					<div class="input-prepend input-padding-increased">
	          <span class="add-on">
	            <i class="icon-lock icon-large"></i>
	          </span>
					<%= user.number_field :height %>
					</div>
				</div>
			</div>

			<div class="control-group no-margin">
				<div class="field">
					<%= user.label :weight %>
				</div>
				<div class="control">
					<div class="input-prepend input-padding-increased">
	          <span class="add-on">
	            <i class="icon-lock icon-large"></i>
	          </span>
					<%= user.number_field :weight %>
					</div>
				</div>
			</div>

			<div class="control-group no-margin">
				<div class="field">
					<%= user.label(:gender,"Male") %>
					<%= user.radio_button(:gender, "male") %>

					<%= user.label(:gender, "Female") %>
					<%= user.radio_button(:gender, "female") %>
				</div>
			</div>

			<div class="control-group no-margin">
				<div class="field">
					<%= user.label :avatar, "Upload your Profile Picture" %>
					<%= user.file_field :avatar %>
				</div>
			</div>

			<div class="control-group no-margin">
				<div class="field">
		    	<%= user.label :remote_avatar_url, "Or Insert your Picture Link:" %>
		    </div>
		    <div class="control">
	        <div class="input-prepend input-padding-increased">
	          <span class="add-on">
	            <i class="eicon-user icon-large"></i>
	          </span>
		    	<%= user.text_field :remote_avatar_url %>
		    	</div>
		  	</div>
		  </div>

			<div class="form-actions">
	      <div class="span4 offset4">
					<%= user.submit 'Submit!', :class => "btn btn-block btn-success" %>
				</div>
			</div>

		</fieldset>
	</div>

<% end %>

  </section>
</div>

<div id="tutorialbox">
	<h1 id="instructions"></h1>
</div>