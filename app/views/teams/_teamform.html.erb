<%= form_for(@team) do |f| %>

  <div class="body">
    <fieldset>

      <div class="control-group no-margin">
        <div class="control">
          <div class="input-prepend input-padding-increased">
            <span class="add-on">
              <i class="eicon-user icon-large"></i>
            </span>
          <%= f.text_field :name, placeholder: "Name" %>
          </div>
        </div>
      </div>

      <div class="control-group no-margin">
        <div class="control">
          <div class="input-prepend input-padding-increased span12">
          <%= f.text_area :description, {placeholder: "Write a team description or moto", :class=>"span12"} %>
          </div>
        </div>
      </div>

      <div class="control-group no-margin">
        <div class="control">
          <div class="row-fluid">
            <div class="widget">
              <%= f.label :avatar, "Upload your Profile Picture", { style: "text-align:center"} %>
              <br>
              <%= f.file_field :avatar, {:class=>"btn btn-transparent span12"} %>
              <%= f.text_field :remote_avatar_url, {placeholder: "Or Insert a Picture Link", :class => "span12"} %>
            </div>
          </div>
        </div>
      </div>

      <div class="control-group no-margin">
        <div class="form-actions" style="padding-top:1rem; padding-bottom: 1rem">
          <%= f.submit 'Submit!', :class => "btn btn-block btn-success btn-large" %>
        </div>
      </div>

    </fieldset>
  </div>
<% end %>