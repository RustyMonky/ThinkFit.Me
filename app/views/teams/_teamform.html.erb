<%= form_for(@team) do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </div>
  <br/>
  <div class="field">
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :remote_avatar_url, "or avatar URL" %><br/>
    <%= f.text_field :remote_avatar_url %>
  </div>

  <div class="action">
    <%= f.submit %>
  </div>
<% end %>