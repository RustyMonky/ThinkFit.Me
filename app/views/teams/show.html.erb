<h1><%= @team.name %></h1>
<p>
  <%= @team.description %>
</p>


<div class="roster">
  <h3>Members</h3>
    <div class="roster">
    <ul>
      <% @team.users.each do |member| %>
        <div class="person">
          <li>  <%= member.name %></li>
        </div>
      <% end %>
    </ul>
    <p> <%= render 'new_member' %> </p>
  </div>
</div>

<div id="teamwall">
	<h1>Wall: </h1>
	<%= render "/comments/new" %>
	<%= render "/comments/each" %>
</div>
<%= paginate @comments %>
