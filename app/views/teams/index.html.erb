<div class="content">
  <div class = "span12">
    <section class="widget">
      <header>
        <legend><h4>
            My Teams
        </h4></legend>
      </header>

      <div class="body">
        <div class="row_fluid">
          <% current_user.teams.each do |team| %>
            <div class="widget span4">
              <div class="span4">
                <%= image_tag team.avatar_url(:banner), :class => "img-circle" %>
              </div>
              <div class="span6 offset1">
                <h4><%= link_to team.name, team_path(team) %></h4>
                <address>
                  Description: <%= team.description.capitalize %><br>
                  Created by: <%= User.find(team.owner_id).name %><br>
                  Members:
                  <% if team.users != [] %>
                    <% team.users.each do |user| %>
                      <li><%= user.name %></li>
                    <% end %>
                  <% end %>
                </address>
              </div>
            </div>
          <% end %>
          <% if current_user %>
          <%= button_to "Create a Team",  new_team_path, :class => "btn btn-success btn-large span6 offset3", :method => :get  %>
          <% end %>
        </div>
      </div>
    </section>
  </div>     
</div>