<header>
  <h5>
    Challenged:
  </h5>
</header>

<section class="widget">
  <div id="member">
    <% @commentable.inverse_challenges.each do |opponent| %>
      <%= link_to opponent.challengeable.name,  polymorphic_path(opponent.challengeable) %>
    <% end %>
  </div>
</section>

<header>
  <h5>
    Fending Off:
  </h5>
</header>
<section class="widget">
  <div id="member">
    <% @commentable.challenges.each do |opponent| %>
      <%= link_to opponent.defendable.name, polymorphic_path([opponent.defendable]) %>
    <% end %>
  </div>
</section>


