<section class="widget">
  <header>
    <h5>
      Challenged:
    </h5>
  </header>
  <div class="body">
    <div id="member">
      <ul>
        <% current_user.inverse_challenges.each do |opponent| %>
          <li> <%= link_to opponent.challengeable.name,  polymorphic_path(opponent.challengeable) %> </li>
        <% end %>
      </ul>
    </div>
  </div>
</section>

<section class="widget">
  <header>
    <h5>
      Fending Off:
    </h5>
  </header>
  <div class="body">
    <div id="member">
      <ul>
        <% current_user.challenges.each do |opponent| %>
          <li> <%= link_to opponent.defendable.name, polymorphic_path([opponent.defendable]) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</section>
