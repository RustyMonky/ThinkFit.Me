<!DOCTYPE html>
<html>
  <head>
    <title>Thinkfitme</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>


    <div class = "userinfo", style= "float: right">
      <% if current_user %>
        Signed in as <%= current_user.name %> | <%= link_to "Logout", user_session_path("current"), method: :delete %> | 
        <%= link_to "DASHBOARD", "users/#{current_user.id}/dashboard" %>
      <% else %>
        <%= link_to "Log In", new_user_session_path %> | <%= link_to "Sign Up", new_user_path %>
      <% end %>
    </div>

    <div class = "flash">
      <% if flash[:notice] %>
        <p id = "notice", style="color:green"><%= flash[:notice] %></p>
      <% end %>
      <% if flash[:alert] %>
        <p id = "alert", style="color:red"><%= flash[:alert] %></p>
      <% end %>
    </div>

    <%= yield %>

  </body>
</html>
