<div class="chat-message">
  <div class="sender pull-left">
    <div class="icon">
      <%= image_tag User.find(@comment.user_id).avatar_url(:thumb), :class => "img-circle" %>
    </div>
    <div class="time">
      <%= @comment.created_at.to_s(:just_time) %>
    </div>
  </div>

  <div class="chat-message-body">
    <span class="arrow"></span>
    <div class="sender">
      <%= User.find(@comment.user_id).name %>
    </div>
    <div class="text">
      <%= @comment.comment %>
    </div>
  </div>
</div>
